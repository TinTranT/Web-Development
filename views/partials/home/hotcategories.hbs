<style>
    .hotcategories .box-head {
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
        margin-bottom: 20px;
    }

    .hotcategories .box-head::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(to right, var(--color-red) 15%, var(--color-gray) 15%);
    }

    .hotcategories .box-head .inner-title {
        color: var(--color-red);
        font-weight: 700;
        font-size: 24px;
    }

    .hotcategories .carousel {
        height: 500px;
    }

    .hotcategories .carousel .carousel-inner img {
        height: 500px;
        width: 100%;
        object-fit: cover;
    }

    .hotcategories .carousel .button-carousel button {
        width: 20px;
        height: 20px;
        padding: 0;
        margin-right: 10px;
        margin-left: 10px;
        border-top: 0;
        border-bottom: 0;
        border-radius: 50%;
        background-color: var(--color-black);
    }

    .hotcategories .carousel .button-carousel .active {
        background-color: var(--color-red);
    }

    .hotcategories .carousel-caption {
        bottom: 2.25rem;
        left: 4%;
        text-align: left;
        height: 462px;
    }

    .hotcategories .carousel-caption .inner-content h5 {
        font-size: 24px;
        font-weight: 700;
        color: var(--color-white);
        margin-bottom: 20px;
    }

    .hotcategories .carousel-caption .inner-content p {
        font-size: 18px;
        color: var(--color-white);
        position: relative;
    }

    .hotcategories .carousel-caption .inner-content p::before {
        content: '';
        position: absolute;
        top: -5px;
        left: 0;
        width: 10%;
        height: 2px;
        background: var(--color-red);
    }

    .hotcategories .carousel-caption .inner-caption {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    .hotcategories .carousel-caption .inner-caption .inner-badge .text-bg-primary {
        font-size: 18px;
    }

    .hotcategories .inner-caption .inner-content {
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 1);
    }

    .hotcategories .inner-box {
        margin-top: 20px;
        display: flex;
    }

    .hotcategories .inner-box .inner-image {
        margin-right: 20px;
        position: relative;

    }

    .hotcategories .inner-box .inner-image img {
        height: 200px;
        width: 180px;
        object-fit: cover;
    }

    .hotcategories .inner-box .inner-image .inner-badge {
        position: absolute;
        top: 8px;
        left: 8px;
    }


    .hotcategories .inner-box .inner-content .inner-title {
        font-size: 15px;
        margin-bottom: 25px;
    }

    .hotcategories a.content {
        text-decoration: none;
        /* Loại bỏ gạch chân */
        color: inherit;
        /* Giữ nguyên màu sắc của các phần tử bên trong */
        display: block;
        /* Đảm bảo thẻ <a> bao quanh toàn bộ nội dung bên trong */
    }
    .hotcategories .inner-titlev2 {
        color: var(--color-gray);
        font-size: 16px;
    }
    .hotcategories .premium {
        color: #87743D;
        font-weight: bold;
        font-size: 0.9em;
        margin-right: 10px;
    }

    .hotcategories button {
        color: var(--color-red);
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        font-weight: 700;
        cursor: pointer;
    }

    .hotcategories .nav-pills .nav-link.active {
        background-color: var(--color-red);
    }

    .hotcategories button::selection {
    background-color: var(--color-red);
    color: var(--color-white);
    }

    .hotcategories button:hover {
        color: var(--color-red);
    }
</style>

