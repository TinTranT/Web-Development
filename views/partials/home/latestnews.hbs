<style>
    .lastnews .box-head .inner-title {
        color: var(--color-red);
        font-weight: 700;
        font-size: 24px;
    }

    .lastnews .box-head {
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
        margin-bottom: 20px;
    }

    .lastnews .box-head::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(to right, var(--color-red) 15%, var(--color-gray) 15%);
    }

    .lastnews .inner-box .inner-content .inner-title {
        font-size: 15px;
        margin-bottom: 25px;
    }

    .lastnews .inner-box .inner-image {
        margin-right: 20px;
        position: relative;
    }

    .lastnews .inner-box .inner-image img {
        height: 160px;
        width: 180px;
        object-fit: cover;
    }

    .lastnews .inner-box {
        margin-top: 20px;
        display: flex;
    }

    .lastnews .inner-box .inner-content .inner-titlev2 {
        color: var(--color-gray);
        font-size: 16px;
    }

    .lastnews a.content {
        text-decoration: none;
        /* Loại bỏ gạch chân */
        color: inherit;
        /* Giữ nguyên màu sắc của các phần tử bên trong */
        display: block;
        /* Đảm bảo thẻ <a> bao quanh toàn bộ nội dung bên trong */
    }
</style>


<div class="lastnews">
    <div class="row">
        <div class="col-12">
            <div class="box-head">
                <h5 class="inner-title">Recent</h5>
            </div>
        </div>
    </div>

    <div class="row">
        {{#each latestNews}}
        <div class="col-md-6 mb-3">
            <a class="content" href="/news/details?id={{this.NewsID}}">
                <div class="inner-box">
                    <div class="inner-image ">
                        <img src="{{Thumbnail}}" alt="">
                    </div>
                    <div class="inner-content">
                        <p class="inner-title">Craig Bator- <span class="inner-titlev2"> {{PublishDate}}</span> </p>
                        <h5>{{Title}}</h5>
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
</div>