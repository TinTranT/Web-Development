<style>
    .submit-button {
        background-color: var(--color-red);
        color: #fff;
        font-weight: 600;
        transition: .5s;
    }

    .submit-button:hover {
        background-color: var(--color-red-dark);
        color: #fff;
    }
</style>
<div class="bg-light rounded p-4">
    <h4 class="mb-4">Comments</h4>
    {{#each this.commentList}}
    <div class="p-4 bg-white rounded mb-4">
        <div class="row g-4">
            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <h5>{{ReaderName}}</h5>
                </div>
                <small class="text-body d-block mb-3"><i class="fas fa-calendar-alt me-1"></i> {{formatDate Date}}</small>
                <p class="mb-0">
                    {{Content}}
                </p>
            </div>
        </div>
    </div>
    {{/each}}

</div>
<div class="bg-light rounded p-4 my-4">
    <h4 class="mb-4">Leave A Comment</h4>
    <form action="#">
        <div class="row g-4">
            <div class="col-12">

            </div>
            <div class="col-12">
                <textarea class="form-control" name="textarea" id="" cols="30" rows="7"
                    placeholder="Write Your Comment Here"></textarea>
            </div>
            <div class="col-12">
                <button class="submit-button form-control btn py-3" type="button">Submit Now</button>
            </div>
        </div>
    </form>
</div>