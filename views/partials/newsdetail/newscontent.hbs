{{#section 'css'}}
<style>
    .thumbnail {
        object-fit: cover;
        width: 100%;
        height: 100%;
        max-height: 600px;
    }

    .premium {
        color: #87743D;
        font-weight: bold;
        font-size: 0.9em;
        margin-right: 10px;
    }

    .article-content {
        position: relative;
        overflow: hidden;
        /* Đảm bảo nội dung không tràn ra ngoài */
        word-wrap: break-word;
        /* Đảm bảo từ không bị tràn */
        max-width: 100%;
        /* Giới hạn chiều rộng tối đa */
        padding: 20px;
        /* Tạo khoảng cách giữa nội dung và viền div */
        box-sizing: border-box;
        /* Bao gồm padding trong kích thước tổng thể */
    }

    .article-content img,
    .article-content video,
    .article-content iframe {
        max-width: 100%;
        /* Đảm bảo hình ảnh hoặc iframe không lớn hơn div cha */
        height: auto;
        /* Giữ tỷ lệ khung hình */
        display: block;
        /* Ngăn các thành phần inline gây lỗi */
        margin: 0 auto;
        /* Căn giữa nội dung */
    }

    .article-content table {
        max-width: 100%;
        /* Giới hạn chiều rộng bảng */
        overflow-x: auto;
        /* Cho phép cuộn ngang nếu bảng quá rộng */
        display: block;
        /* Bảng không làm vỡ layout */
    }
</style>
{{/section}}
<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
        {{#if (isEqual this.news.PremiumFlag 1)}} <span class="premium">PREMIUM</span> {{/if}}
        <a href="/news/byCat?id={{this.category.CatID}}" class="text-dark link-hover me-3">
            <span class="badge bg-primary">
                {{this.category.CatName}}
            </span>
        </a>
    </div>
    <div class="">{{formatDate this.news.PublishDate}}</div>
</div>
<div class="mb-4">
    <a href="#" class="h1 display-5">{{this.news.Title}}</a>
</div>
<div class="position-relative rounded overflow-hidden mb-3">
    <img src="/static/imgs/{{this.news.Thumbnail}}" alt="" class="thumbnail">
</div>
<div class="article-content">
    {{{this.news.Content}}}
</div>

<div class="tab-class mt-4">
    <div class="d-flex justify-content-between border-bottom mb-4">
        <ul class="nav nav-pills d-inline-flex text-center">
            <li class="nav-item mb-3">
                <h5 class="mt-2 me-3 mb-0">Tags:</h5>
            </li>
            {{#each this.taglist}}
            <li class="nav-item mb-3">
                <a class="d-flex py-2 bg-light rounded-pill active me-2" href="/news/byTag?id={{TagID}}">
                    <span class="text-dark" style="width: 100px;">{{TagName}}</span>
                </a>
            </li>
            {{/each}}
        </ul>
    </div>
</div>