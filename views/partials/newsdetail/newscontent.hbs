{{#section 'css'}}
<style>
    .thumbnail {
    object-fit: cover; 
    width: 100%; 
    height: 100%;
    max-height: 600px;
    }
    .premium {
        color: #87743D;
        font-weight: bold;
        font-size: 0.9em;
        margin-right: 10px;
    }
</style>
{{/section}}
<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
    {{#if (isEqual this.news.PremiumFlag 1)}} <span class="premium" >PREMIUM</span>  {{/if}}
    <a href="/news/byCat?id={{this.category.CatID}}" class="text-dark link-hover me-3">
        <span class="badge bg-primary">
            {{this.category.CatName}}
        </span>
    </a>
    </div>
    <div class="">{{formatDate this.news.PublishDate}}</div>
</div>
<div class="mb-4">
    <a href="#" class="h1 display-5">{{this.news.Title}}</a>
</div>
<div class="position-relative rounded overflow-hidden mb-3">
    <img src="/static/imgs/{{this.news.Thumbnail}}" alt="" class="thumbnail">
</div>
<div class="article-content">
    {{{this.news.Content}}}
</div>

<div class="tab-class mt-4">
    <div class="d-flex justify-content-between border-bottom mb-4">
        <ul class="nav nav-pills d-inline-flex text-center">
            <li class="nav-item mb-3">
                <h5 class="mt-2 me-3 mb-0">Tags:</h5>
            </li>
            {{#each this.taglist}}
            <li class="nav-item mb-3">
                <a class="d-flex py-2 bg-light rounded-pill active me-2" href="/news/byTag?id={{TagID}}">
                    <span class="text-dark" style="width: 100px;">{{TagName}}</span>
                </a>
            </li>
            {{/each}}
        </ul>
        <div class="d-flex align-items-center">
            <h5 class="mb-0 me-3">Share:</h5>
            <i class="fab bi bi-facebook  btn btn-square rounded-circle border  text-dark me-2"></i>
            <i class="btn fab bi-twitter  btn btn-square rounded-circle b border text-dark me-2"></i>
            <i class="btn fab bi bi-instagram  btn btn-square rounded-circle  border text-dark me-2"></i>
            <i class="btn fab bi bi-linkedin btn btn-square rounded-circle  border text-dark"></i>
        </div>
    </div>
</div>