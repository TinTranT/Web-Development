<style>
    .text-uppercase {
        font-size: 14px;
    }
    .relatednews {
        position: relative;
    }
    .container-link {
        display: block;
    }

    .container-link::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }
</style>
<div class="row g-4">
    <div class="col-12">
        <div class="p-3 rounded border">
            <h4 class="my-4">Bài viết cùng chuyên mục</h4>
            <div class="row g-4">
                {{#each this.relatedNews}}
                {{#if @first}}
                <div class="col-12 relatednews">
                    <div class="rounded overflow-hidden my-4">
                        <img src="{{Thumbnail}}" class="img-fluid rounded img-zoomin w-100" alt="">
                    </div>
                    <div class="d-flex flex-column">
                        <a href="/news/details?id={{NewsID}}" class="h4 mb-2 container-link">{{Title}}</a>
                        <p class="fs-5 mb-0"><i class="fa fa-clock">{{formatDate PublishDate}}</i> </p>
                        <p class="fs-5 mb-0"><i class="fa fa-eye">by Nguyễn Văn A</i></p>
                    </div>
                </div>
                {{else}}
                <div class="col-12 relatednews">
                    <div class="row g-4 align-items-center">
                        <div class="col-5">
                            <div class="overflow-hidden rounded">
                                <img src="{{Thumbnail}}" class="img-zoomin img-fluid rounded w-100" alt="">
                            </div>
                        </div>
                        <div class="col-7">
                            <div class="features-content d-flex flex-column">
                                <a href="/news/details?id={{NewsID}}" class="h6 container-link">{{Title}}</a>
                                <small><i class="fa fa-clock"> {{formatDate PublishDate}}</i> </small>
                                <small><i class="fa fa-eye">by Nguyễn Văn A</i></small>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
            <div class="row g-4 my-4">
                <div class="col-lg-12">
                    <a href="/news/byCat?id={{this.category.CatID}}" class="link-hover btn border rounded-pill text-dark w-100 py-3 mb-4">View
                        More</a>
                </div>
            </div>
        </div>
    </div>
</div>