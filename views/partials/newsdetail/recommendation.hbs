<style>
    .text-uppercase {
        font-size: 14px;
    }
    .relatednews {
        position: relative;
    }
    .RelatedArticles {
        font-size: 1.5em;
        font-weight: 600;
    }

    .container-link {
        display: block;
    }

        .catName {
        font-weight: bold;
        font-size: 2em;
        color: var(--color-black);
        border-left: 5px solid var(--color-red);
        padding-left: 8px;
    }

    .container-link::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }

    .title {
        transition: color 0.5s ease;
    }
    .title:hover {
        color: var(--color-red);
    }

    .premium {
        color: #87743D;
        font-weight: bold;
        font-size: 0.8em;
        margin-right: 10px;
    }
</style>
<div class="row g-4">
    <div class="col-12">
        <div class="p-3 rounded border">
            <h4 class="RelatedArticles">Related Articles</h4>
            <div class="row g-4">
                {{#each this.relatedNews}}
                {{#if @first}}
                <div class="col-12 relatednews">
                    <div class="rounded overflow-hidden my-4">
                        <img src="/static/imgs/{{Thumbnail}}" class="img-fluid rounded img-zoomin w-100" alt="">
                    </div>
                    <div class="d-flex flex-column">
                        <a href="/news/details?id={{NewsID}}" class="h4 mb-2 container-link title">{{Title}}</a>
                        <p class="fs-5 mb-0">
                            {{#if (isEqual PremiumFlag 1)}}<span class="premium">PREMIUM</span> {{/if}}
                            <i class="fa fa-clock">{{formatDate PublishDate}}</i>  
                            </p>
                    </div>
                </div>
                {{else}}
                <div class="col-12 relatednews">
                    <div class="row g-4 align-items-center">
                        <div class="col-5">
                            <div class="overflow-hidden rounded">
                                <img src="/static/imgs/{{Thumbnail}}" class="img-zoomin img-fluid rounded w-100" alt="">
                            </div>
                        </div>
                        <div class="col-7">
                            <div class="features-content d-flex flex-column">
                                <a href="/news/details?id={{NewsID}}" class="h6 container-link title">{{Title}}</a>
                                <small><i class="fa fa-clock"> 
                                    {{#if (isEqual PremiumFlag 1)}}<span class="premium">PREMIUM</span> {{/if}}
                                    {{formatDate PublishDate}}</i> 
                                    </small>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
            <div class="row g-4 my-4">
                <div class="col-lg-12">
                    <a href="/news/byCat?id={{this.category.CatID}}" class="link-hover btn border rounded-pill text-dark w-100 py-3 mb-4">View
                        More</a>
                </div>
            </div>
        </div>
    </div>
</div>