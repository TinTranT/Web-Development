{{#section 'js'}}
<script>
    $('#frmUpdate').on('submit', function (e) {
        e.preventDefault();
        const old_pass = $('#txtOldPassword').val();
        const new_pass = $('#txtPassword').val();
        const confirm_pass = $('#txtConfirmPassword').val();

        if (old_pass.length === 0) {
            alert('Old password is required');
            return;
        }

        if (new_pass !== confirm_pass) {
            alert('New Password and Confirm Password do not match');
            return;
        }

        $.getJSON(`/account/is-available?old_password=${old_pass}`, function (data) {
            if (data === false) {
                alert('Wrong Password');
            } else {
                $('#frmUpdate').off('submit').submit();
            }
        });
    });
</script>
{{/section}}
<form id="frmUpdate" action="" method="post">
    <div class="card">
        <div class="card-header">
            Update password
        </div>

        <div class="card-body">
            {{#if showErrors}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Login failed!</strong> You should check your Email or password.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {{/if}}
            <p>
                Sinh viên tự làm
            <ul>
                <li>Nhớ kiểm tra mật khẩu cũ</li>
                <li>Mật khẩu mới nhập 2 lần</li>
                <li>Mật khẩu mới nhớ hash</li>
            </ul>
            </p>
            <div class="form-group">
                <label for="txtOldPassword">Old Password</label>
                <input type="password" name="raw_old_password" id="txtOldPassword" class="form-control">
            </div>
            <div class="form-group">
                <label for="txtPassword">New Password</label>
                <input type="password" name="raw_password" id="txtPassword" class="form-control">
            </div>
            <div class="form-group">
                <label for="txtConfirmPassword">Confirm Password</label>
                <input type="password" name="confirm_password" id="txtConfirmPassword" class="form-control"
                    placeholder="">
            </div>
        </div>
        <div class="card-footer text-muted">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check2"></i>
                Apply Change
            </button>
        </div>
    </div>
</form>