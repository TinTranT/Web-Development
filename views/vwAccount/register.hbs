{{#section 'css'}}
<link rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}

{{#section 'js'}}
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script>
  // alert('Hello from vwAccount/register.hbs');
  $('#txtDOB').datetimepicker({
    timepicker: false,
    format: 'd/m/Y',
    mask: true
  });

  $('#frmRegister').on('submit', function (e) {
    e.preventDefault();
    const email = $('#txtEmail').val();
    const password = $('#txtPassword').val();
    const confirm_password = $('#txtConfirmPassword').val();

    if (email.length === 0) {
      alert('Email is required');
      return;
    }

    if (password !== confirm_password) {
      alert('Password and Confirm Password do not match');
      return;
    }

    $.getJSON(`/account/is-available?email=${email}`, function (data) {
      if (data === false) {
        alert('Email is not available');
      } else {
        $('#frmRegister').off('submit').submit();
      }
    });
  })
</script>
{{/section}}

<form id="frmRegister" action="" method="post">
  <div class="card">
    <h5 class="card-header">
      Account Registration Form
    </h5>
    <div class="card-body">
      <h5>Account Information</h5>
      <div class="form-group">
        <label for="txtEmail">Email</label>
        <input type="text" name="email" id="txtEmail" class="form-control" placeholder="">
      </div>
      <div class="form-group">
        <label for="txtPassword">Password</label>
        <input type="password" name="raw_password" id="txtPassword" class="form-control" placeholder="">
      </div>
      <div class="form-group">
        <label for="txtConfirmPassword">Confirm Password</label>
        <input type="password" name="confirm_password" id="txtConfirmPassword" class="form-control" placeholder="">
      </div>

      <h5>Additional Information</h5>
      <div class="form-group">
        <label for="txtName">Name</label>
        <input type="text" name="name" id="txtName" class="form-control" placeholder="">
      </div>
      <div class="form-group">
        <label for="txtPenName">Pen Name</label>
        <input type="text" name="pen_name" id="txtPenName" class="form-control" placeholder="">
      </div>
      <div class="form-group">
        <label for="txtDOB">Date of Birth</label>
        <input type="text" name="raw_dob" id="txtDOB" class="form-control" placeholder="">
      </div>
    </div>
    <div class="card-footer text-muted">
      <button type="submit" class="btn btn-primary">
        <i class="bi bi-check2"></i>
        Sign Up
      </button>
    </div>
  </div>
</form>