<form action="" method="post">
    <div class="card">
        <div class="card-header">
            Profile
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="txtUsername">Username</label>
                <input type="text" name="txtUsername" id="" class="form-control" value="{{this.user.username}}">
            </div>
            <div class="form-group">
                <label for="txtName">Name</label>
                <input type="text" name="txtName" id="" class="form-control" value="{{this.user.name}}">
            </div>
            <div class="form-group">
                <label for="txtEmail">Email</label>
                <input type="text" name="txtEmail" id="" class="form-control" value="{{this.user.email}}">
            </div>
        </div>
        <div class="card-footer text-muted">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check2"></i>
                Save
            </button>
        </div>
    </div>
</form>