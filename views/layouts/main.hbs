    <script>
        function toggleDropdownAttributes() {
            //console.log(1);
            //const dropdownLink = document.getElementById("first");
            const dropdownLinks = document.querySelectorAll(".nav-item .nav-link");
            const preventdropdownitems = document.querySelectorAll(".nav-item .dropdown-menu");
            const dropdownLinksLevel3 = document.querySelectorAll(".son-son-menu-father-six .son-menu-six");
            const dropdownLinksfather3 = document.querySelectorAll(".son-son-menu-father-six .son-a-menu-father-six")

            if(window.matchMedia("(max-width: 991px)").matches)
            {
                const dropdowns = document.querySelectorAll(".son-son-menu-father-six")
                dropdowns.forEach(dropdown => {
                    dropdown.classList.remove("dropright");
                    dropdown.classList.add("dropdown");
                });
                preventdropdownitems.forEach( preventdropdownitem=>{preventdropdownitem.addEventListener("click", (event) =>{
                            event.stopPropagation();
                })})
            }
            else
            {
                dropdownLinks.forEach(link =>{
                link.removeAttribute("data-toggle", "dropdown");
                link.removeAttribute("aria-expanded", "false");
                link.removeAttribute("aria-expanded", "true");
                })
                const elements = document.querySelectorAll('.show');
                elements.forEach(element => { element.classList.remove('show'); });
                const dropdowns = document.querySelectorAll(".son-son-menu-father-six")
                dropdowns.forEach(dropdown => {
                    dropdown.classList.remove("dropdown");
                    dropdown.classList.add("dropright");
                });
            }
            
            

            dropdownLinks.forEach( link => {
                link.addEventListener("click", () => {
                    if(window.matchMedia("(max-width: 991px)").matches)
                    {
                        link.setAttribute("data-toggle", "dropdown");
                       
                        link.setAttribute("aria-expanded", "false");
                    }
                    else
                    {
                        link.removeAttribute("data-toggle", "dropdown");
                        link.removeAttribute("aria-expanded", "false");
                        link.removeAttribute("aria-expanded", "true");
                        const elements = document.querySelectorAll('.show');
                        elements.forEach(element => { element.classList.remove('show'); });
                    }
                });
            });



            
        }

        // Kiểm tra khi tải trang và khi thay đổi kích thước cửa sổ
        window.addEventListener("load", toggleDropdownAttributes);
        window.addEventListener("resize", toggleDropdownAttributes);
        
    </script>
