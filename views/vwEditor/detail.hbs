{{#section 'css'}}
<style>
    .thumbnail {
        object-fit: cover;
        width: 100%;
        height: 250px;
    }

    .action div * {
        width: 30%;
    }
</style>
{{/section}}
{{#section 'js'}}
{{/section}}

<div class="main">
    <main class="content px-3 py-4">
        <div class="container-fluid">
            <div class="mb-3">
                <div class="news-content">
                    <div class="d-flex justify-content-between">
                        <h5>
                            <a href="#" class="text-dark link-hover me-3">
                                <span class="badge bg-primary">
                                    {{this.category.CatName}}
                                </span>
                        </h5>
                        </h4>
                        <h4 class="text-dark">
                            <span class="badge bg-info">
                                {{nameStatus this.news.Status}}
                            </span>
                        </h4>
                    </div>
                    <div class="mb-4">
                        <a href="#" class="h1 display-5">{{this.news.Title}}</a>
                    </div>
                    <div class="position-relative rounded overflow-hidden mb-3">
                        <img src="/static/imgs/{{this.news.Thumbnail}}" alt="{{this.news.Title}}" class="thumbnail">
                    </div>
                    <div class="article-content">
                        {{{this.news.Content}}}
                    </div>

                    <div class="tab-class">
                        <div class="d-flex justify-content-between border-bottom mb-4">
                            <ul class="nav nav-pills d-inline-flex text-center">
                                <li class="nav-item mb-3">
                                    <h5 class="mt-2 me-3 mb-0">Tags:</h5>
                                </li>
                                {{#each this.taglist}}
                                <li class="nav-item mb-3">
                                    <a class="d-flex py-2 bg-light rounded-pill active me-2" href="">
                                        <span class="text-dark" style="width: 100px;">{{TagName}}</span>
                                    </a>
                                </li>
                                {{/each}}
                            </ul>
                            <div class="d-flex align-items-center text-center" style="font-weight: bold;">
                                Written By:  {{this.writer.Name}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="action">
                    <div style="display: none;">
                        <input type="text" id="newsId" name="newsId" value="{{this.news.NewsID}}">
                    </div>
                    <div class="d-flex justify-content-around">
                        <a href="{{retUrl}}" class="btn btn-primary">
                            <i class="bi bi-arrow-left"></i>
                            Go back
                        </a>
                        {{#unless hide}}
                        <a href="/editor/draft-articles/approve?id={{this.news.NewsID}}" class="btn btn-success">
                            <i class="bi bi-file-earmark-arrow-up"></i>
                            Approve
                        </a>
                        <a href="/editor/draft-articles/reject?id={{this.news.NewsID}}" class="btn btn-warning">
                            <i class="bi bi-x-octagon-fill"></i>
                            Reject
                        </a>
                        {{/unless}}
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>